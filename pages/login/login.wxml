<view>
    <view class="login-icon">
        <image class="login_img" src="../resource/images/in.jpg"></image>
    </view>
    <view class="login_from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="input">
                <image class="imagename" src="../resource/images/username.png"></image>
                <label class="loginLabel">账号</label>
                <input name="username"  class="inputname" placeholder="请输入账号" />
            </view>
            <view class="line"></view>

            <!--密码-->
            <view class="input">
                <image class="imagekey" src="../resource/images/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password"  class="inputpassword" password="true" placeholder="请输入密码" />
            </view>

         

            <!--按钮 登录 注册-->
            <view>
                <button class="login" type="primary" form-type='submit'>立即登录</button>
            </view>

            <view>
                <button class="regist" type="warn" bindtap="gotoRegistPage">点击注册</button>
            </view>
        </form>
    </view>
</view>